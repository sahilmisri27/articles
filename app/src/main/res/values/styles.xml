<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="articleContentStyle">
        <item name="android:textSize">@dimen/size14</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="userNameStyle">
        <item name="android:textSize">@dimen/size14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="userDesignationStyle">
        <item name="android:textSize">@dimen/size14</item>
        <item name="android:textColor">@color/fifty_percent_black</item>
    </style>

    <style name="articleTimeStyle">
        <item name="android:textSize">@dimen/size14</item>
        <item name="android:textColor">@color/fifty_percent_black</item>
    </style>

    <style name="articleLikeCommentStyle">
        <item name="android:textSize">@dimen/size14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>